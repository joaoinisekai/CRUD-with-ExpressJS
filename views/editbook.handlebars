<form action="/books/updatebook" method="POST" class="form-container row justify-content-center">
        <h1>Edit your book</h1>
        <input type="hidden" name="id" value="{{book.id}}">
        <div class="form-control">
            <label for="title">Title:</label>
            <input type="text" name="title" value="{{book.title}}" placeholder="Type the title">
        </div>
        <div class="form-control">
            <label for="pageqty">Page Numbers:</label>
            <input type="number" name="pageqty" value="{{book.pageqty}}" placeholder="How many pages does the book have?">
        </div>
        <input class="btn" type="submit" value="Edit">
</form>
