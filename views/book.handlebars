<div class="books-page container">
    <a href="/books">Back</a>
    <div class="container">
        <h1>{{ book.title }}</h1>
        <p>This is book has {{ book.pageqty }} pages</p>
    </div>
    <div class="actions">
        <a href="/books/edit/{{book.id}}">Edit</a>
        <form action="/books/remove/{{book.id}}" method="POST">
            <input type="submit" value="Delete">
        </form>
    </div>
</div>